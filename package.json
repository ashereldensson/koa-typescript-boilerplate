{
  "name": "koa-typescript-boilerplate",
  "version": "0.0.0",
  "description": "My Koa typescript boilerplate API starter.",
  "main": "dist/index.js",
  "scripts": {
    "dev-server": "nodemon --watch src -e ts --exec ts-node src/index.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest --runInBand --forceExit --detectOpenHandles",
    "build-ts": "tsc",
    "build": "npm run lint && npm run build-ts",
    "start": "node dist/index.js"
  },
  "engines": {
    "node": "14.x.x"
  },
  "repository": "git@github.com:ashershekhamis/koa-typescript-boilerplate.git",
  "author": "Asher Shekhamis",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "koa": "^2.13.1",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.0.0",
    "koa-jwt": "^4.0.0",
    "koa-mount": "^4.0.0",
    "koa-swagger-decorator": "^1.7.3",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.30",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa-basic-auth": "^2.0.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-mount": "^4.0.0",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.4",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "lodash": "^4.17.20",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
